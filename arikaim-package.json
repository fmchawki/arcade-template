{      
    "title": "Arcade Site",
    "version": "2.0.10",
    "name": "arcade",
    "package-type": "template",
    "icon": "gamepad",
    "thumbnail": "arcade-site-thumbnail.jpg",
    "repository": "https://github.com/arikaim/arcade-template.git",
    "require": {
        "library": [
            "jquery",
            "arikaim",
            "arikaim-ui",
            "fomantic",
            "adsense:optional",
            "js-dos:optional",
            "analytics:optional",
            "tailwind"
        ],
        "extensions": [
            "arcade",
            "tags",
            "share",
            "users",
            "category",
            "rating",
            "captcha:optional",
            "comments:optional"
        ]
    },
    "languages": [
        "en",
        "de",
        "es",
        "ru"      
    ],
    "routes": [
        {
            "path": "/leaderboard",           
            "page": "leaderboard",
            "language-path": true,
            "name": "Leaderboard"                   
        },
        {
            "path": "/about",      
            "language-path": true,     
            "page": "about",
            "name": "About"                   
        },
        {
            "path": "/privacy",      
            "language-path": true,     
            "page": "privacy",
            "name": "Privacy"                   
        }
    ],
    "include": {     
        "components": [
            "arcade:users",
            "components:policy.cookie.dialog",
            "arcade::api",
            "components:paginator"
        ],         
        "css": [
            "arcade.css"
        ],        
        "library": [
            "jquery",
            "arikaim",
            "arikaim-ui",
            "adsense",
            "analytics",
            "fomantic:form",    
            "fomantic:flags",     
            "fomantic:toast",    
            "fomantic:popup",        
            "tailwind",
            "tailwind:grid",
            "tailwind:colors",           
            "tailwind:size",
            "tailwind:align",
            "tailwind:layout",           
            "tailwind:animation"           
        ]      
    },
    "themes": [
        "default"
    ],
    "default-theme": "default",
    "editor": {
        "site-logo": {
            "editor": "logo",                   
            "params": {
                "width": 210,
                "height": 46,
                "hide_protected": true,
                "deny_delete": true,
                "file_name": "logo.png",
                "target_path": "{{templates_path}}arcade/images/"
            }
        }
    }      
}